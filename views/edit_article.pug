extends layout.pug

block content
    h1 Edit
    form(method="post" action=`/article/edit/${id}`)
        #form-group
            label(for="title") Title:
            input.form-control(type="text" name="title" id="title" value= title)
        #form-group   
            label(for="author") Author:
            input.form-control(type="text" name="author" id="author" value= author)
        #form-group
            label(for="body") Body:
            input.form-control(type="textarea" name="body" id="body" value= body)
            br
        input.btn.btn-primary(type="submit" value="Submit")    
    br
    a(href=`/article/${id}`) Back    